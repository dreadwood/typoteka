extends layout

block content
  main.main-page.main-page--padding
    section.main-page__publication.publication
      h1.publication__title Комментарии
      ul.publication__list
        each comment in comments
          li.publication__list-item
            .publication__header
              img.publication__list-image(src=`/img/${comment.user.avatar}` width="20" height="20" alt="Аватар пользователя")
              b.publication__list-name=comment.user.name
              +timeLabel(comment.createdAt, "publication__item-time")
            a.publication__item-text(href=`/articles/${comment.ArticleId}#comment-${comment.id}`)=comment.text
            p.publication__text-strong=comment.article.title
            a.publication__button.button.button--close-item(href=`/articles/comments/${comment.id}`)
              span.visually-hidden Удалить комментарий
